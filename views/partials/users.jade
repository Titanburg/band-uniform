.users(ng-init='getUsers()')
    .container-fluid
        .row
            .col-sm-8.col-sm-offset-2
                .panel.panel-default
                    .panel-heading
                        h3 {{title}}
                    .panel-body
                        ul.nav.nav-pills
                            li.active(role='presentation')
                                a(href='#') Admin
                            li(role='presentation')
                                a(href='#') Woodwinds
                            li(role='presentation')
                                a(href='#') Sousas
                            li(role='presentation')
                                a(href='#') Percussion
                        table.table.table-hover
                            thead
                                tr
                                    th First Name
                                    th Last Name
                                    th Email
                            tbody
                                tr(ng-repeat='user in users | orderBy:"firstName"')
                                    td {{user.local.firstName}}
                                    td {{user.local.lastName}}
                                    td {{user.local.email}}
                                    td
                                        button.btn.btn-info(type='button' data-toggle='modal' data-target='#editUser' ng-click='getUser(user)') Edit
                                tr
                                    td.success.text-center(colspan='4') Add User
    .modal.fade(id='editUser' tabindex='-1' role='dialog')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button' data-dismiss='modal' aria-label="Close")
                        span(aria-hidden='true')
                    h4.modal-title Edit User
                .modal-body
                    form.form
                        .form-group
                            label First name
                            input.form-control(type='text' ng-value='user.local.firstName')
                        .form-group
                            lable Last name
                            input.form-control(type='text' ng-value='user.local.lastName')
                        .form-group
                            lable Email
                            input.form-control(type='email' ng-value='user.local.email')
                .modal-footer
                    button.btn.btn-default(type='button' data-dismiss='modal') Close
                    button.btn.btn-primary(type='button') Save Changes
