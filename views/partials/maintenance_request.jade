.maintenance(ng-init='getRequests()')
    .container-fluid
        .row
            .col-sm-8.col-sm-offset-2
                .panel.panel-default
                    .panel-heading
                        h3 {{title}}
                    .panel-body
                        ul.nav.nav-pills
                            li.active(role='presentation')
                                a(href='#') All
                            li(role='presentation')
                                a(href='#') Woodwinds
                            li(role='presentation')
                                a(href='#') Sousas
                            li(role='presentation')
                                a(href='#') Percussion
                        table.table.table-hover
                            thead
                                tr
                                    th First Name
                                    th Last Name
                                    th Piece
                                    th Discription
                            tbody
                                tr(ng-repeat='request in requests | orderBy:"firstName"')
                                    td {{request.local.firstName}}
                                    td {{request.local.lastName}}
                                    td {{request.local.piece}}
                                    td {{request.local.desription}}
                                        button.btn.btn-info(type='button' data-toggle='modal' data-target='#editUser') Edit
                                tr
                                    td.success.text-center(colspan='4') New Request
                            button.btn.btn-info(type='button' data-toggle='modal' data-target='#editRequest') Edit
    .modal.fade(id='editRequest' tabindex='-1' role='dialog')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button' data-dismiss='modal' aria-label="Close")
                        span(aria-hidden='true')
                    h4.modal-title Edit User
                .modal-body
                  form(name="maintenance_request" method="post" action="api/maintenance_request/")
                    label Name: 
                    input(type="text", name="user" placeholder="First") 
                    input(type="text", name="user" placeholder="Last")
                    br
                    label Piece:
                    select(name="part")
                        option jacket
                        option jumpsuit
                        option hat
                        option glove
                        option other    
                    br
                    label Descibe what is wrong:
                    br
                    textarea(rows="4" cols="50")
                    br
                    button(type="submit") Submit
                    button(type="submit") Clear
                .modal-footer
                    button.btn.btn-default(type='button' data-dismiss='modal') Cancel
