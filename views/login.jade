extends layout

block content
  .login-page
    .login-overlay
    .login-bar
      img(src="/images/mblogo.png", width='200px', alt="MB Man Logo")
      form(name='login', class="login-input", action='/auth/login', method='post')
        input(type='email', class="text", name='email', placeholder='Email')
        br
        input(type='password', class="text", name='password', placeholder='Password')
        br
        input(type='submit', class="signin-btn", value='Sign In')
        a(href="/auth/signup") Request Account
